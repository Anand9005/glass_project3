<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="st.css">

<section class="buy_section layout_padding">
    <div class="container">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="card">
          <div class="card-body">
            <h1 class="card-title text-center"><b>Checkout</b></h1>

<%= flash[:notice]%>
        <br />
        <h3><b>Total Amount to paid : <%= number_to_currency(session[:amount]) %></b></h3>
<%= form_with url: "/gallery/checkout", method: :post do |f| %>
  <div class="form-group">
   <h5> <%= f.label :first_name %><br />
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
  <div class="fiform-groupeld">
   <h5> <%= f.label :last_name %><br />
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <h5><%= f.label :credit_card_no %><br />
    <%= f.text_field :credit_no, class: "form-control" %>
  </div>
  <div class="form-group">
   <h5> <%= f.label :date_of_expiry %><br />
      <select name="check[month]" id="check_out_month" class= "form-control">
    <option selected value="01">Janurary
    <option  value="02">Feburary
    <option  value="03">March
    <option  value="04">April
    <option  value="05">May
    <option  value="06">June
    <option  value="07">July
    <option  value="08">August
    <option  value="09">September
    <option  value="10">October
    <option  value="11">November
    <option  value="12">December
    </select>
    <select name="check[year]" id=check_out_year class= "form-control"">
    <option selected value="2022">2022
    <option  value="2023">2023
    <option  value="2024">2024
    <option  value="2025">2025
    <option  value="2026">2026
    <option  value="2027">2027
    <option  value="2028">2028
    <option  value="2029">2029
    <option  value="2030">2030
    <option  value="2031">2031
    <option  value="2032">2032
    <option  value="2033">2033
  </select>
  </div>

  <div class="form-group">
   <h5> <%= f.label :verification_number %><br />
    <%= f.text_field :verification_number, class: "form-control"%>
  </div>
  <br/><br/>
  <div class="form-group">
    <%= f.submit "Checkout", class: "btn btn-primary btn-block" %>
  </div>
  <% end %>

  </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  </section>